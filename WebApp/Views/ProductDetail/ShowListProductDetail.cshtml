@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
<div style="background-color: aliceblue;">
    <div class="filter-container pd-top-100">
        <label for="category">Loại sản phẩm:</label>
        <select id="category">
            <option value="all">Tất cả</option>
            <option value="laptop">Laptop</option>
            <option value="smartphone">Smartphone</option>
        </select>
        <label for="category">Thương hiệu:</label>
        <select id="category">
            <option value="all">Tất cả</option>
            <option value="laptop">Laptop</option>
            <option value="smartphone">Smartphone</option>
        </select>
        <label for="category">Giá tiền sản phẩm:</label>
        <select id="category">
            <option value="all">Tất cả</option>
            <option value="laptop">Laptop</option>
            <option value="smartphone">Smartphone</option>
        </select>
        <label for="search">Tìm kiếm:</label>
        <input type="text" id="search" placeholder="Nhập từ khóa">

        <button onclick="filterProducts()">Lọc</button>
    </div>
    <section style="background-color: aliceblue;">
        <div class="rp-mobi py-5 container">
            <div class="row List-products-2">
                @foreach (var t in ViewBag.ListProduct)
                {
                    <div class="col-md-3 col-sm-3">
                        <div class="product-box">
                           
                                @if (t.LinkImage != null)
                                {
                                    <img src="@Configuration.GetSection("UrlApiAdmin").Value@Url.Content(t.LinkImage)" alt="Product Image"/><br />
                                }
                                else
                                {
                                <img class="width-330" src="@Configuration.GetSection("UrlApiAdmin").Value/images/NoImage.png" alt="Product Image" /><br />
                            }
                            <a class="no-underline" asp-controller="ProductDetail" asp-action="Detail" asp-route-code="@t.Code" asp-route-name="@t.NameProduct" >
                                @t.NameProduct @t.Code (@t.TenCpu, @t.TenCardVGA @t.ThongSoCardVGA, @t.TanSoManHinh @t.ChatLieuManHinh )
                            </a>
                              
                                <div class="computer-configuration">
                                    <div class="configuration-item">
                                    <span>@t.ThongSoRam</span>
                                    </div>
                                    <div class="configuration-item">
                                    <span> @t.ThongSoHardDrive</span>
                                    </div>
                                    <div class="configuration-item">
                                    <span>@t.KichCoManHinh</span>
                                    </div>
                                </div>
                                <div class="Product-price">
                                <span>@t.Price.ToString("N0") </span>
                                <p>@t.ImportPrice.ToString("N0")</p>
                                </div>
                           
                        </div>
                    </div>
                    
                }
            </div>
        </div>
        <br />
    </section>
    <p></p>
    </div>

<style>
    .product-box:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Increase box shadow on hover */
        }

    .img-product {
        max-width: 100%; /* Make sure the image doesn't exceed the container */
        height: 240px; /* Maintain aspect ratio of the image */
    }

    .card-body {
        padding: 15px; /* Add some padding inside the card body */
    }

    .card-text {
        margin-bottom: 10px; /* Add some spacing between text and other elements */
    }

    .no-underline {
        text-decoration: none; /* Remove underline from the link */
        color: #333; /* Set link color */
    }
    .card-product{
        font-family: Inter;
        font-size: 16px;
        font-style: normal;
        font-weight: 500;
        line-height: normal;
    }
    .pd-bt-20{
        padding-bottom:20px
    }
        .filter-container {
      margin-bottom: 20px;
    }

    /* Style cho danh sách sản phẩm */
    .product-list {
      list-style: none;
      padding: 0;
    }

    .product-item {
      border: 1px solid #ccc;
      margin-bottom: 5px;
      padding: 10px;
    }
    .pd-top-100{
        padding-top:100px;
    }
    .container{
        max-width: 1450px !important;
    }
</style>

<script>
    $(document).ready(function(){
      
    });
</script>


    

