<div class="filter-container pd-top-100">
  <label for="category">Loại sản phẩm:</label>
  <select id="category">
    <option value="all">Tất cả</option>
    <option value="laptop">Laptop</option>
    <option value="smartphone">Smartphone</option>
  </select>
    <label for="category">Thương hiệu:</label>
    <select id="category">
        <option value="all">Tất cả</option>
        <option value="laptop">Laptop</option>
        <option value="smartphone">Smartphone</option>
    </select>
    <label for="category">Giá tiền sản phẩm:</label>
    <select id="category">
        <option value="all">Tất cả</option>
        <option value="laptop">Laptop</option>
        <option value="smartphone">Smartphone</option>
    </select>
  <label for="search">Tìm kiếm:</label>
  <input type="text" id="search" placeholder="Nhập từ khóa">

  <button onclick="filterProducts()">Lọc</button>
</div>
<section style="background-color:transparent;">
    <div class="rp-mobi py-5">
        <div class="row list-product">
            @foreach (var t in ViewBag.ListProduct)
            {
                <div class="col-md-3 col-sm-3 pd-bt-20">
                <div class="card card-product">
                    @if (t.LinkImage != null)
                    {
                        <img src="@Configuration.GetSection("UrlApiAdmin").Value@Url.Content(t.LinkImage)" alt="Product Image" class="img-thumbnail img-product" />
                    }
                    else
                    {
                        <img src="@Configuration.GetSection("UrlApiAdmin").Value/images/NoImage.png" alt="Product Image" class="img-thumbnail img-product" />
                    }
                   
                    <div class="card-body">
                        <p class="card-text ">
                            <a class="no-underline" asp-controller="ProductDetail" asp-action="Detail" asp-route-code="@t.Code" asp-route-name="@t.NameProduct">[Mới 100%]* @t.NameProduct @t.Code (@t.TenCpu,@t.ThongSoRam, @t.ThongSoHardDrive,@t.TenCardVGA @t.ThongSoCardVGA,@t.KichCoManHinh @t.TanSoManHinh @t.ChatLieuManHinh )  </a>
                          <br>  <span style=" color: red;font-weight: bold;">@t.Price.ToString("N0")</span>
                            <span style=" color: gray; text-decoration: line-through; ">@t.ImportPrice.ToString("N0")</span>
                        </p>
                    </div>
                </div>
                </div> 
     
            } 
            </div>
        </div>
        <br />
    </section>
    <p></p>
<style>
    .list-product{
        max-width: 1400px !important;
        text-align:center !important;
        margin:auto !important;
    }
    .card-product {
     
        height: 400px;
        padding-bottom:30px;
        border: 1px solid #ddd; /* Add a border to the card */
        border-radius: 8px; /* Add rounded corners to the card */
        overflow: hidden; /* Hide any content that overflows the card */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow */
        transition: box-shadow 0.3s ease; /* Add a smooth transition to the box shadow */
      
        margin-right: 20px;
    }

        .card-product:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Increase box shadow on hover */
        }

    .img-product {
        max-width: 100%; /* Make sure the image doesn't exceed the container */
        height: 240px; /* Maintain aspect ratio of the image */
    }

    .card-body {
        padding: 15px; /* Add some padding inside the card body */
    }

    .card-text {
        margin-bottom: 10px; /* Add some spacing between text and other elements */
    }

    .no-underline {
        text-decoration: none; /* Remove underline from the link */
        color: #333; /* Set link color */
    }
    .card-product{
        font-family: Inter;
        font-size: 16px;
        font-style: normal;
        font-weight: 500;
        line-height: normal;
    }
    .pd-bt-20{
        padding-bottom:20px
    }
        .filter-container {
      margin-bottom: 20px;
    }

    /* Style cho danh sách sản phẩm */
    .product-list {
      list-style: none;
      padding: 0;
    }

    .product-item {
      border: 1px solid #ccc;
      margin-bottom: 5px;
      padding: 10px;
    }
    .pd-top-100{
        padding-top:100px;
    }
</style>

