    <section style="background-color: #eee;">
        <div class="container py-5">
        <div class="row">
            @foreach (var t in ViewBag.ListProduct)
            {
                <div class="card" style="width: 18rem; margin-right: 20px;">
                    @if (t.LinkImage != null)
                    {
                        <img src="@Configuration.GetSection("UrlApiAdmin").Value@Url.Content(t.LinkImage)" alt="Product Image" class="img-thumbnail" />
                    }
                    else
                    {
                        <img src="@Configuration.GetSection("UrlApiAdmin").Value/images/NoImage.png" alt="Product Image" class="img-thumbnail" />
                    }
                   
                    <div class="card-body">
                        <p class="card-text ">
                            <a class="no-underline" asp-controller="ProductDetail" asp-action="Detail" asp-route-code="@t.Code">[Mới 100%]* @t.NameProduct @t.Code (@t.TenCpu,@t.ThongSoRam, @t.ThongSoHardDrive,@t.TenCardVGA @t.ThongSoCardVGA,@t.KichCoManHinh @t.TanSoManHinh @t.ChatLieuManHinh )  </a>
                          <br>  <span style=" color: red;font-weight: bold;">@t.Price.ToString("N0")</span>
                            <span style=" color: gray; text-decoration: line-through; ">@t.ImportPrice.ToString("N0")</span>
                        </p>
                    </div>
                </div>
            } 
            </div>
        </div>
    </section>
    <style>
    .no-underline {
        text-decoration: none;

    </style>

    

