@{
    var httpContext = ViewContext.HttpContext;
    string accessToken = httpContext.Request.Cookies["access_token"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=FontName">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="~/css/main.css"/>
    <link  rel="stylesheet" href="~/css/Header.css"/>
    <link  rel="stylesheet" href="~/css/Detail.css"/>
    <link  rel="stylesheet" href="~/css/Footer.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header>
        <div class="Nav-header justify-content-center d-flex" style="background-color: #73BBFE;">
            <div class="navbar navbar-expand-md d-flex flex-column container" style="background-color:transparent;">
                <div class="d-flex w-100">
                    <div class="row d-flex align-items-center flex-grow-1">
                        <div class="col-md-1"></div>
                        <div class="head-session col-md-5 justify-content-start d-flex ">
                            <form class="d-flex w-100" role="search">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-success" type="submit">Search</button>
                            </form>

                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>
                        <div class="collapse col-md-6 navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0 w-100 justify-content-around">
                                <li class="nav-item  d-flex justify-content-center align-items-xxl-center">
                                    <div id="CartButton" class="Hot-Line col-2">
                                        <i class="fa-solid fa-bag-shopping"></i>
                                        <span>Giỏ Hàng</span>
                                    </div>
                                </li>
                                <li class="nav-item  d-flex justify-content-center align-items-xxl-center">
                                    <div id="HotLineButton" class="Hot-Line col-2">
                                        <i class="fa-solid fa-phone"></i>
                                        <span>SĐT: 1800.1516</span>
                                    </div>
                                </li>
                                @{

                                    if (accessToken != null)
                                    {
                                        <li class="nav-item  d-flex justify-content-center align-items-xxl-center">
                                            <div class="Hot-Line col-2">
                                                <a class="d-flex" style="text-decoration: none;">
                                                    <i class="fa-solid fa-user"></i>
                                                    <span>Tài Khoản</span>
                                                </a>
                                            </div>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item d-flex justify-content-center align-items-xxl-center">
                                            <a href="@Url.Action("Login", "Home")" class="Hot-Line col-2" style="text-decoration: none;">
                                                <div class="d-flex">
                                                    <i class="fa-solid fa-user"></i>
                                                    <span>Đăng Nhập</span>
                                                </div>
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>

                        </div>
                    </div>
                </div>
                <div class="Menu container w-100" id="menu">
                    <div class="Menu-list row flex-grow-1">
                        <nav class="navbar navbar-expand-sm">
                            <!-- Nút "Expand" chỉ hiển thị trên màn hình nhỏ -->
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <!-- Thẻ item đầu tiên -->
                            <div class="collapse navbar-collapse" id="navbarNav">
                                <ul class="navbar-nav d-flex w-100 justify-content-around  align-items-center">
                                    <li class="nav-item">
                                        <a class="nav-link line-clamp" href="#">LAPTOP</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link line-clamp" href="#">HỌC TẬP, VĂN PHÒNG</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link line-clamp" href="#">GAMING</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link line-clamp" href="#">MỎNG NHẸ</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link line-clamp" href="#">ĐỒ HỌA, KỸ THUẬT</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link line-clamp" href="#">PHỤ KIỆN</a>
                                    </li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>

        </div>
    </header>
    <div id="root">
       @RenderBody()
    </div>
    <footer>
        @await Html.PartialAsync("_Footer")
    </footer>
    <script src="~/js/Signup.js"> </script>
    <script src="~/js//HeaderNavigation.js"> </script>
    <script src="~/js/Home.js"></script>
    <script src="~/js/Product.js"></script>
    <script src="~/js/Login.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>
