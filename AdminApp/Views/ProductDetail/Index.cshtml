            $("#grid1").kendoGrid({
                dataSource: {
                    transport: {
                        read: {
                            url: "/ProductDetail/GetProductDetail",
                            type: "GET",
                            dataType: "json"
                        },
                        create: {
                            url: "/ProductDetail/CreateProductDetail",
